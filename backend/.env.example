# Database Configuration
DATABASE_URL=sqlite:///./hospital.db
# For PostgreSQL: postgresql://username:password@localhost:5432/hospital_db
# For MySQL: mysql://username:password@localhost:3306/hospital_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000","http://127.0.0.1:3001"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=vitalit.log

# API Configuration
API_PREFIX=
TITLE=Vitalit OS API
VERSION=1.0.0
DESCRIPTION=Enterprise Hospital Management System API

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Test Mode
TEST_MODE=false

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Development Settings
DEBUG=true
ENVIRONMENT=development
