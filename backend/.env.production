# Application
APP_NAME="VITALIt Healthcare System"
APP_VERSION="1.0.0"
DEBUG=false
DEV_MODE=false

# Database
DATABASE_URL=postgresql://vitalit:${DB_PASSWORD}@localhost:5432/vitalit
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_SSL=true
REDIS_DB=0

# Security
TOKEN_SECRET_KEY=${TOKEN_SECRET_KEY}
REFRESH_TOKEN_SECRET_KEY=${REFRESH_TOKEN_SECRET_KEY}
TOKEN_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
MFA_ENABLED=true
SECURE_COOKIES=true

# CORS
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# File Upload
UPLOAD_DIR=/opt/vitalit/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.pdf

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_TLS=true
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=/opt/vitalit/logs/vitalit.log
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# Backup
BACKUP_DIR=/opt/vitalit/backups
BACKUP_RETENTION_DAYS=30
BACKUP_TIME=00:00

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Payment Processing
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_API_VERSION=2024-01-01

# Feature Flags
ENABLE_MFA=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AUDIT_LOGS=true
ENABLE_FILE_UPLOAD=true
